@import "../common/css/common.wxss";

/**** topview ****/
.topview{
   z-index: 1;
   width:750rpx;
   height: 120rpx;
   background: white;
   position: fixed;
   top: 0;
   align-items: center;
   box-shadow: 0 0 6px 0 #dedede;
}

.topview .input_search{
  position: absolute;
  width: 480rpx;
  height: 80rpx;
  margin-left: 30rpx;
  background: #EEEEEE;
  margin-top: 20rpx;
  padding-left: 100rpx;
  font-size: 32rpx;
  padding-right: 30rpx;
  border-radius: 40rpx;
}

.topview .img_search{
  position: absolute;
  margin-left: 60rpx;
  width: 40rpx;
  height: 40rpx;
  margin-top: 40rpx;
}

.topview .btn_cancel{
  position: absolute;
  font-size: 32rpx;
  color: #353648;
  right: 30rpx;
  margin-top: 36rpx;
}

.noresult{
  width: 100%;
  margin-top: 60rpx;
  position: absolute;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add{
  color: blue;
}

/** scrollview  **/
.scrollview{
  z-index: 0;
  width: 750rpx;
  margin-top: 120rpx;
}

.list{
  margin:30rpx;
  width: 100%;
  height: 60rpx;
}

.result{
  font-size: 32rpx;
  color: #353648;
}
