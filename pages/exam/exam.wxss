@import "../common/css/common.wxss";

.eaxm_view {
  width: 670rpx;
  height: 900rpx;
  margin-top: 60rpx;
  border-radius: 48rpx;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.exam_top {
  width: 610rpx;
  height: 50rpx;
  display: flex;
  flex-direction: row nowrap;
  justify-content: space-between;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.exam_category {
  margin-top: 10rpx;
}

.exam_select {
  width: 500rpx;
  color: #bbb;
  display: flex;
  font-size: 30rpx;
  justify-content: left;
  margin-top: 20rpx;
}

.exam_btn {
  width: 500rpx;
  height: 100rpx;
  font-size: 40rpx;
  margin-top: 30rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 6rpx;
  border-radius: 4px;
}

.active {
  opacity: 0.9;
}

/*结果页面*/

.result_view {
  width: 100%;
  background-color: white;
  z-index: 2;
  position: relative;
}

.result {
  width: 690rpx;
  margin-left: 30rpx;
  border-radius: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
}

.score_txt {
  margin-top: 10rpx;
}

.score {
  color: #ff4500;
  font-size: 60rpx;
}

.title {
  color: #f00;
  margin-top: 20rpx;
}

.rank_txt {
  margin-top: 20rpx;
  font-size: 12px;
  color: #757675;
}

.score_img {
  margin-top: 20rpx;
  width: 180rpx;
  height: 200rpx;
}

.lineview {
  margin-top: 30rpx;
  width: 610rpx;
}

.subject_view {
  width: 610rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}

.share_btn {
  width: 610rpx;
  height: 100rpx;
  margin-top: 40rpx;
  border-radius: 50rpx;
  background-color: #ff7f50;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: white;
}

.oncemore_btn {
  width: 280rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #87cefa;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: white;
}

.answer_btn {
  width: 280rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #ee82ee;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: white;
}


.canvas{
  width: 345px;
  height: 500px;
  position: absolute;
  z-index: 3;
  background-color: linear-gradient(rgb(156, 235, 186), rgb(105, 226, 198));
}

.save_btn{  
  z-index: 3;
  width: 345px;
  margin-top: 515px;
  height: 50px;
  position: absolute;
}