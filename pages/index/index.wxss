  margin-top: 60rpx;
  margin-right: 4%;
  margin-left: 4%;
}

.start_title_view{
  display: flex;
  flex-direction: column;
  margin-top: 64rpx;
  width: 92%;
  margin-left: 4%;
  margin-right: 4%;
}

.start_main_title{
  color: #353648;
  font-size: 36rpx;
  line-height: 50rpx;
}

.start_sub_title{
  color: #757685;
  font-size: 30rpx;
