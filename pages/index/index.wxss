@import "../common/css/common.wxss";
.indexpage{
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(rgb(156, 235, 186), rgb(105, 226, 198));
}

.component{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
}

.img_bg{
  position: absolute;
  width: 100%;
  height: 842rpx;
  z-index: 0;
  bottom: 0;
  margin-bottom: 60rpx;
}

.tabbar{
  width: 100%;
  height: 120rpx;
  background-color: white;
  bottom: 0;
  position: absolute;
  z-index: 2;
  border-top-right-radius: 20px;
  border-top-left-radius: 20px;
  display: flex;
}

.tabview{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 25%;
  justify-content: center;
}


.img_menu{
  width: 100rpx;
}

.active{
  width:120rpx;
}



/*授权*/

